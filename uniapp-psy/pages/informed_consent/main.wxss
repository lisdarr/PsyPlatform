/* pages/informed_consent/main.wxss */

.bg{
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index : -1;
    background-color:rgb(239, 252, 255);
}

.bg-img{
    height: 180rpx;
    width: 180rpx;
}

.title{
    height:100rpx;
    width:700rpx;
    background: none;
    text-align: center;
}

.content{
    margin: 20rpx auto 0 auto;
    width: 700rpx;
    height: 600rpx;
    background:white;
    border-radius: 16rpx;
    font-size: 80rpx;
    line-height: 300rpx;
    text-align: center;
}

.agree-button{
    margin-top: 30rpx;
    background-color: #72d4b9;
    color: #fff;
    font-size: 32rpx;
    border-radius: 4rpx;
    height: 100rpx;
    line-height: 100rpx;
    box-shadow: 0rpx 1rpx 10rpx #9b9a9a;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}