@import "/template/vendor.wxss";

.login {
  background-color: #e4ebf1;
  min-height: 100vh;
  box-sizing: border-box;
}
.counter-warp {
  background-color: #fff;
  text-align: center;
}
.counter-warp .header{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #3c536e;
  font-weight: 200;
}
.counter-warp .header .avatar {
  height: 220rpx;
  width: 220rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}
.counter-warp .fromContent {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.counter-warp .fromContent .inputContent{
  position: relative;
  width: calc(100% - 60rpx);
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(112,112,112,0.5);
}
.counter-warp .fromContent .inputContent .loginInput {
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #3c536e;
}
.counter-warp .fromContent .telephone {
  width: calc(100% - 60rpx);
  border-bottom: 1rpx solid rgba(112,112,112,0.5);
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.counter-warp .fromContent .telephone .loginInput {
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #3c536e;
}
.counter-warp .fromContent .telephone .gotTelephone {
  height: 84rpx;
  width: 295rpx;
  font-size: 30rpx;
  background-color: #72d4b9;
  color: #fff;
  /* line-height: 84rpx; */
}
.counter-warp .fromContent .telephone .gotTelephone::after {
  border: none;
}
.counter-warp .text {
  padding-top: 50rpx;
  font-size: 36rpx;
}
.counter-warp .text .text-content {
  font-size: 46rpx;
  padding-top: 28rpx;
}
.login-button {
  margin-top: 120rpx;
  background-color: #72d4b9;
  color: #fff;
  font-size: 32rpx;
  border-radius: 0;
  /* height: 100rpx;
  line-height: 100rpx; */
}
