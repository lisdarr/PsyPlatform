  <view class="login">
    <view class="counter-warp">
      <view class="header">
        <open-data type="userAvatarUrl" class="avatar"></open-data>
        <view class="text">
          <open-data type="userNickName"></open-data>
          <view class="text-content">请修改您的信息</view>
        </view>
      </view>
      <view class="fromContent">
        <view class="inputContent">
          <i-input bind:change="getNameInput" title="真实姓名" i-class="loginInput" placeholder="请输入真实姓名" maxlength="100" right></i-input>

        </view>
        <view class="inputContent">
          <i-input bind:change="getNumInput" i-class="loginInput" title="联系电话" clearable  type="number" maxlength="11" right></i-input>
        </view>
        <view class="inputContent">
          <i-input bind:change="getSosNameInput" i-class="loginInput" title="紧急联系人" maxlength="100" clearable right></i-input>
        </view>
        <view class="inputContent">
          <i-input bind:change="getSosNumInput" i-class="loginInput" title="紧急联系人电话" clearable  type="number" maxlength="11" right></i-input>
        </view>
      </view> 
      <button class="login-button" bindtap="handleProxy1" data-eventid="{{'5'}}" data-comkey="{{$k}}">提交修改信息</button>
    </view>
  </view>