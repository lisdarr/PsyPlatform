/* pages/counselor/main.wxss */

.bg{
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index : -1;
    background-color:rgb(239, 252, 255);
}

.bg-img{
    height: 180rpx;
    width: 180rpx;
}

.title{
    height:100rpx;
    width:700rpx;
    background: none;
    text-align: center;
}

.scroll-container{
    position: absolute; 
    width: 750rpx;
    height: 1000rpx;
}

.sub-container{
    position: absolute; 
    left: 0;
    top: 0;
    width: 100%;
    padding-bottom: 40rpx;
}

.consultant-card{
    margin: 20rpx auto 0 auto;
    width: 700rpx;
    height: 250rpx;
    background:white;
    font-size: 80rpx;
    line-height: 300rpx;
    text-align: center;
}

.consultant-avatar {
    height: 120rpx;
    width: 120rpx;
    top: 20rpx;
    left: 20rpx;
    border-radius: 50%;
    display: block;
    overflow: hidden;
}

.consultant-name {
    position: relative;
    width: 300rpx;  
    height: 50rpx;  
    left: 120rpx;  
    top: 0rpx;  
    font-size: 40rpx;  
    line-height: 40rpx;
    color: #3c536e;
  }

