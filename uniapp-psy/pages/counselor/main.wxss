/* pages/counselor/main.wxss */

.bg{
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index : -1;
    background-color:rgb(239, 252, 255);
}

.bg-img{
    height: 180rpx;
    width: 180rpx;
}

.title{
    color: #1e2e40;
    height: 140rpx;
    line-height: 140rpx;
    font-size: 40rpx;
    text-align: center;
}

.scroll-container{
    position: absolute; 
    width: 750rpx;
    height: 1000rpx;
}

.sub-container{
    position: absolute; 
    left: 0;
    top: 0;
    width: 100%;
    padding-bottom: 40rpx;
}

.consultant-card{
    background-color: #fff;
    padding: 30rpx 0;
    display: flex;
    color: #3c536e;
    position: relative;
    margin-bottom: 20rpx;
    align-items: center;
}

.consultant-avatar {
    height: 160rpx;
    width: 160rpx;
    border-radius: 50%;
    margin: 0 40rpx;
}

.info{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}

.firstRow{
    font-size: 32rpx;
    font-weight: 200;
    min-height: 45rpx;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
}

.consultant-name {
    font-size: 30rpx;
    font-weight: 100;
    color: #27282b;
  }

  .isConsulted{
    background-color: #b2c1d2;
    font-size: 24rpx;
    text-align: center;
    padding-right: 16rpx;
    padding-left: 16rpx;
    color: #fff;
    display: inline-block;
    height: 45rpx;
    line-height: 45rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
  }

  .evalute{
    font-size: 28rpx;
    color: #7e8d9e;
  }

  .cunstom-rate{
    color: #FFBE3D !important;
  }

  .state{
    color: #fff;
    display: inline-block;
    font-size: 32rpx;

    padding-right: 25rpx;
    padding-left: 25rpx;
    height: 45rpx;
    line-height: 45rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;

    /* padding: 12rpx 34rpx; */
    position: absolute;
    right: 26rpx;
    top: 0; 
   
  }

  .free{
    background-color: #72d4b9;
  }

  .busy{
    background-color: #ec2864;
  }